{
  "version": "1.0.0",

  "sourceDir": null,
  "buildDir": null,
  "targetDir": null,
  
  "index": {
    "file": "index.html",
    "copy": true,
    "minify": {
      "minifyJS": true, 
      "minifyCSS": true, 
      "removeAttributeQuotes": true, 
      "removeComments": true, 
      "removeEmptyAttributes": true, 
      "collapseWhitespace": true
    },
    "globalScript": {
      "id": "_spa-obj",
      "mode": "always"
    }
  },
  
  "libs": {
    "dir": "libs",
    "minify": false
  },

  "css": {
    "dir": "css",
    "minify": true,
    "scriptId": "_spa-css",
    "bundle": {
      "result": "default.css",
      "mode": "all"
    }
  }

}
